{
    "extends": [
        "eslint-config-airbnb-base",
        "eslint-config-airbnb",
        "eslint-config-react-app"
    ],
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "window": false,
        "APP_CONFIG": false,
        "it": false
    },
    "rules": {
        "indent": ["error", 4],
        "react/require-default-props": ["off"],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "react/jsx-filename-extension": [
            "off",
            {
                "extensions": [".js", ".jsx"]
            }
        ]
    }
}
